<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
				 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
				 version="1.0">

	<!--No need to connect this file in persistence.xml-->

	<description>My First JPA XML Application</description>

	<package>com.linnyk.jpa.certification.entities</package>

	<entity class="com.linnyk.jpa.certification.entities.UserXML" name="UserXML">
		<table name="UserXML_XML"/>
		<attributes>
			<id name="id">
				<generated-value strategy="IDENTITY"/>
			</id>
			<basic name="name">
				<column name="USER_NAME" length="100"/>
			</basic>
		</attributes>
	</entity>
</entity-mappings>