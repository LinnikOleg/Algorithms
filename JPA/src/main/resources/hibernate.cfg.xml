<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:~/test</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!--Pretty prints the SQL-->
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <!--Mapping-->
        <mapping class="com.linnyk.jpa.safari.data.entities.User"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.generation_type.UserGTTable"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.generation_type.UserGTSequence"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.generation_type.UserGTIdentity"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.generation_type.UserGTAuto"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.generation_type.UserNoGT"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.TimeTest"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.embedded.Bank"/>
        <mapping class="com.linnyk.jpa.safari.data.entities.assosiation.Credential"/>

    </session-factory>
</hibernate-configuration>