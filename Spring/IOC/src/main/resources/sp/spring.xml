<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<bean id="terminatorQuoter" class="com.learning.linnyk.sp.TerminatorQuoter">
		<property name="message" value="I'll be back"/>
	</bean>

	<bean class="com.learning.linnyk.sp.part1.bean_post_processors.InjectRandomIntAnnotationBeanPostProcessor"/>

	<bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

	<bean class="com.learning.linnyk.sp.part1.bean_post_processors.ProfilingHandlerBeanPostProcessor"/>

	<bean class="com.learning.linnyk.sp.part1.bean_post_processors.PostProxyInvokerContextListener"/>

	<bean class="com.learning.linnyk.sp.part1.bean_factory_post_processors.DeprecationHandlerBeanFactoryPostProcessor"/>

	<context:annotation-config/>

</beans>